<!DOCTYPE html>
<html>
<head>
	<title>Book Appointment</title>
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
	<link rel="stylesheet"  href="stylesheets/css/bootstrap.min.css">
	<script src="stylesheets/js/bootstrap.min.js"></script>
	<style>
		body{
			background-color: rgb(252, 252, 252);
			font-family: sans-serif;
		}
	</style>
</head>
<body>
	<%- include('header') %>
	<div class="container">
		<div class="text-center">
			<h1 class="display-4">Book Appointment</h1>
		</div>
	
		<div class="m-5 p-5 bg-light">
			<form action="" method="POST">
				<div class="form-row">
					<div class="col-md-4 md-6 p-3">
						<label for="forCitiesSelect">Cities</label>
						<select class="form-control" id="forCitiesSelect">
							<option>Bangalore</option>
							<option>Chennail</option>
							<option>Delhi</option>
							<option>Mumbai</option>
						</select>
					</div>
					<div class="col-md-4 md-3 p-3">
						<label for="forNameInp">Full Name</label>
						<input class="form-control" type="text" name="name" id="forNameInp" placeholder="Name">
					</div>
					<div class="col-md-4 md-3 p-3">
						<label for="forEmailInp">Email</label>
						<input class="form-control" type="email" name="email" placeholder="name@example.com">
					</div>
					<div class="col-md-4 md-3 p-3">
						<label for="forPhoneInp">Moble No.</label>
						<input class="form-control" type="number" name="phone" placeholder="99XXXXXX01">
					</div>
					<div class="col-md-4 md-3 p-3">
						<label for="forSpecialities">Specialities</label>
						<select class="form-control" id="forSpecialities">
							<option>Cardiologist</option>
							<option>Dentist</option>
							<option>ENT</option>
							<option>Gastoenterologist</option>
							<option>Gynecologist</option>
							<option>Neurosurgeon</option>
							<option>Orthopaedic Surgeon</option>
							<option>Psychiatrist</option>
							<option>Physician</option>
						</select>
					</div>
					<div class="col-md-4 md-3 p-3">
						<label>Sex: </label><br>
						<input type="radio" name="sex">
						<label>Male</label>
						<input type="radio" name="sex">
						<label>Femal</label>
						<input type="radio" name="sex">
						<label>Other</label>
					</div>
					<div class="col-md-4 md-3 p-3">
						<label>Date of Birth</label>
						<input class="form-control" type="date" name="dob" placeholder="DOB">
					</div>
					<div class="col-md-4 md-3 p-3">
						<label>Address</label><br>
						<textarea class="form-control" rows="2" name="address"></textarea>
					</div>
				</div>
				<div style="margin-top: 10px;" class="text-center">
					<button class="btn btn-outline-primary">Submit Request</button>
				</div>
			</form>
		</div>
	</div>
</body>
</html>